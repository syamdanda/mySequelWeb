<% layout('layout') -%>

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Welcome</h3>
            <p>You are 30 seconds away from accessing your MySql Database!</p>
        </div>
        <form method = "POST" action = "/home" class="col-md-9 register-right">
            <div class="row register-form">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" name="host" id="host" placeholder="Host *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="userName" id="userName" placeholder="User Name *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="dbName" id="dbName" placeholder="Database Name *" value="" />
                    </div>                                
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" name="portNumber" id="portNumber" placeholder="Port Number *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password *" value="" />
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="autoConnect" id="autoConnect">
                            <option class="hidden"  selected disabled>Auto Connect</option>
                            <option>True</option>
                            <option>False</option>
                        </select>
                    </div>
                    <input type="submit" class="btnRegister"  value="Access Database"/>                    
                </div>
            </div>
        </form>
    </div>
</div>